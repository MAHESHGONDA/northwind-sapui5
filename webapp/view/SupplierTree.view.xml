<mvc:View xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.table">
	<TreeTable id="supplierTree" selectionMode="Single" enableColumnReordering="false" expandFirstLevel="false"
		rows="{
			path : 'northwind>/Products',
			parameters: { 'expand': 'Supplier,Category' }
		}">
		<columns>
			<Column label="Supplier">
				<template>
					<m:Text text="{northwind>Supplier/CompanyName}" />
				</template>
			</Column>
			<Column label="Products">
				<template>
					<m:Text text="{northwind>Category/CategoryName}" />
				</template>
			</Column>
		</columns>
	</TreeTable>
</mvc:View>