<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:fb="sap.ui.comp.filterbar" controllerName="test.app.controller.ProductList">
	<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true">
	<fb:filterItems>
		<fb:FilterItem name="Products" label="Products">
			<fb:control>
				<Input type="Text"/>
			</fb:control>
		</fb:FilterItem>
		<fb:FilterItem name="Category/CategoryName" label="Categories">
			<fb:control>
				<Input type="Text"/>
			</fb:control>
		</fb:FilterItem>
	</fb:filterItems>
</fb:FilterBar>
	<Table id="productList" class="sapUiResponsiveMargin" width="auto" items="{ path : 'northwind>/Products', sorter: { path : 'Supplier/CompanyName', group : true }, parameters: { 'expand': 'Supplier,Category' } }" growing="true" growingThreshold="20">
		<columns>
			<Column width="30%">
				<Text text="Product"/>
			</Column>
			<Column width="15%">
				<Text text="Category"/>
			</Column>
			<Column width="15%">
				<Text text="Units in Stock"/>
			</Column>
			<Column width="20%">
				<Text text="Quantity per Unity"/>
			</Column>
			<Column width="20%" hAlign="End">
				<Text text="Price"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressProduct">
				<cells>
					<ObjectIdentifier title="{northwind>ProductName}"/>
					<Text text="{northwind>Category/CategoryName}"/>
					<ObjectNumber number="{northwind>UnitsInStock}" emphasized="false"/>
					<ObjectNumber number="{northwind>QuantityPerUnit}" emphasized="false"/>
					<ObjectNumber number="{ parts: [{path: 'northwind>UnitPrice'}, {path: 'view>/currency'}], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }" unit="{view>/currency}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>